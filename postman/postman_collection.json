      "name": "Transaction",
      "item": [
        {
          "name": "001 - Create transaction",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Test 1: Verify response status is 201",
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.expect(pm.response.code).to.eql(201);",
                  "});",
                  "",
                  "// Test 2: Verify the response has a JSON body",
                  "pm.test(\"Response has JSON body\", function () {",
                  "    pm.response.to.be.json;",
                  "});",
                  "",
                  "// Test 3: Check that the response contains expected properties",
                  "pm.test(\"Response contains expected properties\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property(\"id\");",
                  "    pm.expect(jsonData).to.have.property(\"title\");",
                  "    pm.expect(jsonData).to.have.property(\"description\");",
                  "    pm.expect(jsonData).to.have.property(\"amount\");",
                  "    pm.expect(jsonData).to.have.property(\"type\");",
                  "    pm.expect(jsonData).to.have.property(\"date\");",
                  "    pm.expect(jsonData).to.have.property(\"recurrence\");",
                  "    pm.expect(jsonData).to.have.property(\"accountId\");",
                  "    pm.expect(jsonData).to.have.property(\"accountName\");",
                  "    pm.expect(jsonData).to.have.property(\"category\");",
                  "    pm.expect(jsonData).to.have.property(\"hasImage\");",
                  "    pm.expect(jsonData).to.have.property(\"imageBase64\");",
                  "    pm.expect(jsonData).to.have.property(\"imageName\");",
                  "    pm.expect(jsonData).to.have.property(\"imageType\");",
                  "});",
                  "",
                  "// Test 4: Validate nested category object structure",
                  "pm.test(\"Category object has expected properties\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.category).to.have.property(\"id\");",
                  "    pm.expect(jsonData.category).to.have.property(\"name\");",
                  "    pm.expect(jsonData.category).to.have.property(\"color\");",
                  "    pm.expect(jsonData.category).to.have.property(\"icon\");",
                  "    pm.expect(jsonData.category).to.have.property(\"type\");",
                  "    pm.expect(jsonData.category).to.have.property(\"isDefault\");",
                  "    pm.expect(jsonData.category).to.have.property(\"user\");",
                  "});",
                  "",
                  "// Test 5: Validate that returned values match request body values",
                  "pm.test(\"Returned values match request body\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    const requestBody = JSON.parse(pm.request.body.raw);",
                  "    ",
                  "    pm.expect(jsonData.title).to.eql(requestBody.title);",
                  "    pm.expect(jsonData.description).to.eql(requestBody.description);",
                  "    pm.expect(jsonData.amount).to.eql(requestBody.amount);",
                  "    pm.expect(jsonData.type).to.eql(requestBody.type);",
                  "    pm.expect(jsonData.date).to.eql(requestBody.date);",
                  "    pm.expect(jsonData.recurrence).to.eql(requestBody.recurrence);",
                  "    pm.expect(jsonData.accountId).to.eql(requestBody.accountId);",
                  "});",
                  "",
                  "// Test 6: Verify transaction ID was generated",
                  "pm.test(\"Transaction ID was generated\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.id).to.be.a(\"number\");",
                  "    pm.expect(jsonData.id).to.be.above(0);",
                  "});",
                  "",
                  "// Test 7: Validate image properties have correct types",
                  "pm.test(\"Image properties have correct types\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.hasImage).to.be.a(\"boolean\");",
                  "    // imageBase64, imageName, imageType can be null or string",
                  "    if (jsonData.imageBase64 !== null) {",
                  "        pm.expect(jsonData.imageBase64).to.be.a(\"string\");",
                  "    }",
                  "    if (jsonData.imageName !== null) {",
                  "        pm.expect(jsonData.imageName).to.be.a(\"string\");",
                  "    }",
                  "    if (jsonData.imageType !== null) {",
                  "        pm.expect(jsonData.imageType).to.be.a(\"string\");",
                  "    }",
                  "});",
                  "",
                  "// Test 8: Verify account name is present and is a string",
                  "pm.test(\"Account name is present and is a string\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.accountName).to.be.a(\"string\");",
                  "    pm.expect(jsonData.accountName.length).to.be.above(0);",
                  "});",
                  "",
                  "// Save transaction ID to environment variable for use in edit/delete requests",
                  "const responseData = pm.response.json();",
                  "const transactionId = responseData.id;",
                  "pm.environment.set(\"transactionId\", transactionId);",
                  "console.log(\"Transaction ID saved to environment variable 'transactionId':\", transactionId);"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
